<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="horizontal">
  
  <TableLayout android:id="@+id/tableLayout1" android:layout_gravity="top" android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="wrap_content">
       <TableRow android:id="@+id/tableRow1" android:layout_height="wrap_content" android:layout_width="wrap_content">
           <TextView android:text="TextView" android:textSize="28dip" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
       </TableRow>
       <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
           <TextView android:text="TextView" android:id="@+id/textView2" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
       </TableRow>
  </TableLayout>
  <CheckBox android:id="@+id/checkBox1" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:layout_gravity="right"></CheckBox>
  
</LinearLayout>
